<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--侧滑菜单-->
    <declare-styleable name="SwipeMenuLayout">
        <attr name="leftViewId" format="reference" />
        <attr name="rightViewId" format="reference" />
        <attr name="contentViewId" format="reference" />
    </declare-styleable>


    <!--基类-->
    <attr name="contentOrientation" format="integer">
        <enum name="horizontal" value="0" />
        <enum name="vertical" value="1" />
    </attr>
    <attr name="isNeedTips" format="boolean" />
    <attr name="tips" format="string" />
    <attr name="tipsColor" format="color" />
    <attr name="tipsSize" format="dimension" />
    <attr name="contentBackground" format="reference" />
    <attr name="isNeedImg" format="boolean" />
    <attr name="src" format="reference" />
    <attr name="titleText" format="string" />
    <attr name="titleTextColor" format="color" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="titleWidth" format="dimension" />
    <attr name="titleBackground" format="reference" />
    <attr name="contentText" format="string" />
    <attr name="contentTextColor" format="color" />
    <attr name="contentTextSize" format="dimension" />
    <attr name="contentHint" format="string" />
    <attr name="contentHintColor" format="color" />
    <attr name="contentDrawableStart" format="reference" />
    <attr name="contentDrawableEnd" format="reference" />
    <attr name="contentDrawablePadding" format="dimension" />
    <attr name="contentTag" format="string" />
    <attr name="contentGravity" format="integer">
        <enum name="center_vertical" value="0" />
        <enum name="center" value="1" />
        <enum name="start" value="2" />
        <enum name="end" value="3" />
        <enum name="start_vertical" value="4" />
        <enum name="end_vertical" value="5" />
    </attr>
    <attr name="requiredVisibility" format="integer">
        <enum name="visible" value="0" />
        <enum name="invisible" value="1" />
        <enum name="gone" value="2" />
    </attr>
    <attr name="requiredSrc" format="reference" />
    <attr name="unitText" format="string" />
    <attr name="unitTextColor" format="color" />
    <attr name="unitTextSize" format="dimension" />
    <attr name="jumpText" format="string" />
    <attr name="jumpTextColor" format="color" />
    <attr name="jumpTextSize" format="dimension" />
    <attr name="jumpBackground" format="reference" />
    <attr name="isReadOnly" format="boolean" />

    <!--加载页-->
    <declare-styleable name="LoadingLayout">
        <attr name="contentOrientation" />
        <attr name="isNeedTips" />
        <attr name="tips" />
        <attr name="tipsColor" />
        <attr name="tipsSize" />
        <attr name="contentBackground" />
        <attr name="indeterminateDrawable" format="reference" />
        <attr name="isIndeterminate" format="boolean" />
        <attr name="pbWidth" format="dimension" />
        <attr name="pbHeight" format="dimension" />
    </declare-styleable>

    <!--无数据页-->
    <declare-styleable name="NoDataLayout">
        <attr name="isNeedImg" />
        <attr name="src" />
        <attr name="contentOrientation" />
        <attr name="isNeedTips" />
        <attr name="tips" />
        <attr name="tipsColor" />
        <attr name="tipsSize" />
        <attr name="contentBackground" />
    </declare-styleable>

    <!--错误页-->
    <declare-styleable name="ErrorLayout">
        <attr name="isNeedImg" />
        <attr name="src" />
        <attr name="contentOrientation" />
        <attr name="isNeedTips" />
        <attr name="tips" />
        <attr name="tipsColor" />
        <attr name="tipsSize" />
        <attr name="contentBackground" />
    </declare-styleable>

    <attr name="isNeedBackBtn" format="boolean" />
    <attr name="backDrawable" format="reference" />
    <attr name="backText" format="string" />
    <attr name="backTextColor" format="color" />
    <attr name="backTextSize" format="dimension" />
    <attr name="isShowDivideLine" format="boolean" />
    <attr name="divideLineColor" format="color" />
    <attr name="divideLineHeight" format="dimension" />
    <attr name="titleBarBackground" format="reference|color" />
    <attr name="isNeedElevation" format="boolean" />
    <attr name="elevationVale" format="dimension" />

    <!--标题栏-->
    <declare-styleable name="TitleBarLayout">
        <attr name="isNeedBackBtn" />
        <attr name="backDrawable" />
        <attr name="backText" />
        <attr name="backTextColor" />
        <attr name="backTextSize" />
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="isShowDivideLine" />
        <attr name="divideLineColor" />
        <attr name="divideLineHeight" />
        <attr name="titleBarBackground" />
        <attr name="isNeedElevation" />
        <attr name="elevationVale" />
        <attr name="isNeedExpandView" format="boolean" />
        <attr name="expandViewId" format="reference" />
    </declare-styleable>

    <!--搜索标题栏-->
    <declare-styleable name="SearchTitleBarLayout">
        <attr name="isNeedBackBtn" />
        <attr name="backDrawable" />
        <attr name="backText" />
        <attr name="backTextColor" />
        <attr name="backTextSize" />
        <attr name="isShowDivideLine" />
        <attr name="divideLineColor" />
        <attr name="divideLineHeight" />
        <attr name="titleBarBackground" />
        <attr name="isNeedElevation" />
        <attr name="elevationVale" />
        <attr name="isNeedCleanBtn" format="boolean" />
        <attr name="searchDrawable" format="reference" />
        <attr name="cleanDrawable" format="reference" />
        <attr name="inputBackground" format="reference|color" />
        <attr name="inputHint" format="string" />
        <attr name="inputHintTextColor" format="color" />
        <attr name="inputText" format="string" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputTextSize" format="dimension" />
        <attr name="isShowVerticalLine" format="boolean" />
        <attr name="verticalLineBackground" format="reference|color" />
    </declare-styleable>

    <!--自定义TabLayout-->
    <declare-styleable name="MmsTabLayout">
        <attr name="tabMargin" format="dimension" />
    </declare-styleable>

    <!--图片九宫格-->
    <declare-styleable name="NineGridView">
        <attr name="isNeedDrag" format="boolean" />
        <attr name="isNeedDragVibrate" format="boolean" />
        <attr name="isNeedAddBtn" format="boolean" />
        <attr name="addBtnDrawable" format="reference" />
        <attr name="isShowDeleteBtn" format="boolean" />
        <attr name="deleteDrawable" format="reference" />
        <attr name="maxPic" format="integer" />
        <attr name="spanCount" format="integer" />
        <attr name="itemHigh" format="dimension" />
    </declare-styleable>

    <!--索引条-->
    <declare-styleable name="IndexBar">
        <attr name="indexTextColor" format="color" />
        <attr name="indexTextSize" format="dimension" />
        <attr name="isTextBold" format="boolean" />
        <attr name="pressBackgroundColor" format="reference|color" />
    </declare-styleable>

    <!--长图-->
    <declare-styleable name="LongImageView">
        <attr name="placeholderDrawable" format="reference" />
        <attr name="placeholderScaleType" format="integer">
            <enum name="matrix" value="0" />
            <enum name="fitXY" value="1" />
            <enum name="fitStart" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitEnd" value="4" />
            <enum name="center" value="5" />
            <enum name="centerCrop" value="6" />
            <enum name="centerInside" value="7" />
        </attr>
        <attr name="placeholderWidth" format="dimension" />
        <attr name="placeholderHeight" format="dimension" />
        <attr name="showPlaceholder" format="boolean" />
    </declare-styleable>

    <!--采集展示控件-->
    <declare-styleable name="CltTextView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="titleWidth" />
        <attr name="titleBackground" />
        <attr name="contentText" />
        <attr name="contentTextColor" />
        <attr name="contentTextSize" />
        <attr name="contentHint" />
        <attr name="contentHintColor" />
        <attr name="contentDrawableStart" />
        <attr name="contentDrawableEnd" />
        <attr name="contentDrawablePadding" />
        <attr name="contentTag" />
        <attr name="contentGravity" />
        <attr name="contentBackground" />
        <attr name="requiredVisibility" />
        <attr name="requiredSrc" />
        <attr name="unitText" />
        <attr name="unitTextColor" />
        <attr name="unitTextSize" />
        <attr name="jumpText" />
        <attr name="jumpTextColor" />
        <attr name="jumpTextSize" />
        <attr name="jumpBackground" />
        <attr name="isReadOnly" />
    </declare-styleable>

    <!--采集输入控件-->
    <declare-styleable name="CltEditView">
        <attr name="titleText" />
        <attr name="titleTextColor" />
        <attr name="titleTextSize" />
        <attr name="titleWidth" />
        <attr name="titleBackground" />
        <attr name="contentText" />
        <attr name="contentTextColor" />
        <attr name="contentTextSize" />
        <attr name="contentHint" />
        <attr name="contentHintColor" />
        <attr name="contentDrawableStart" />
        <attr name="contentDrawableEnd" />
        <attr name="contentDrawablePadding" />
        <attr name="contentTag" />
        <attr name="contentGravity" />
        <attr name="contentBackground" />
        <attr name="requiredVisibility" />
        <attr name="requiredSrc" />
        <attr name="unitText" />
        <attr name="unitTextColor" />
        <attr name="unitTextSize" />
        <attr name="jumpText" />
        <attr name="jumpTextColor" />
        <attr name="jumpTextSize" />
        <attr name="jumpBackground" />
        <attr name="isReadOnly" />
        <attr name="maxLength" format="integer" />
        <attr name="inputType" format="integer">
            <enum name="text" value="0" />
            <enum name="idcard" value="1" />
            <enum name="phone" value="2" />
            <enum name="number" value="3" />
            <enum name="numberDecimal" value="4" />
            <enum name="foreignCert" value="5" />
        </attr>
        <attr name="minLines" format="integer" />
        <attr name="maxLines" format="integer" />
    </declare-styleable>

</resources>