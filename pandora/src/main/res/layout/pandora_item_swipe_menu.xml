<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lodz.android.pandora.widget.swipe.SwipeMenuLayout
        android:id="@+id/pdr_swip_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:contentViewId="@+id/pdr_content_view"
        app:leftViewId="@+id/pdr_left_view"
        app:rightViewId="@+id/pdr_right_view">

        <FrameLayout
            android:id="@id/pdr_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <FrameLayout
            android:id="@id/pdr_left_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <FrameLayout
            android:id="@id/pdr_right_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </com.lodz.android.pandora.widget.swipe.SwipeMenuLayout>

</LinearLayout>