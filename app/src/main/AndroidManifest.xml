        <activity
            android:name=".modules.statusbar.StatusBarImgTestActivity"
            android:label="带ImageView的状态栏颜色测试"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.drawer.DrawerTestActivity"
            android:label="带DrawerLayout的状态栏测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.statusbar.StatusBarCoordinatorTestActivity"
            android:label="带CoordinatorLayout的状态栏测试类"
            android:screenOrientation="portrait">

        </activity>





    </application>

</manifest>