<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lodz.android.agiledevkt">

    <!-- 联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 写入设置 -->
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <!-- 蓝牙 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- ********************* 需要申请（只要同组有一个授权整组的权限都可以使用） ********************* -->
    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--允许读取手机信息权限-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写存储 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />
    <!-- 录制音频 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- 通过GPS芯片接收卫星的定位信息 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 通过WiFi或移动基站的方式定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.lodz.android.agiledevkt.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <activity
            android:name=".modules.splash.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".modules.main.MainActivity"
            android:label="主页面"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.anko.AnkoLayoutActivity"
            android:label="AnkoLayout测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.file.FileTestActivity"
            android:label="文件测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.security.EncryptTestActivity"
            android:label="加密测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.bitmap.BitmapTestActivity"
            android:label="Bitmap图片测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.image.GlideActivity"
            android:label="Glide测试"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.notification.NotificationActivity"
            android:label="通知测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.toast.ToastTestActivity"
            android:label="Toast测试类"
            android:screenOrientation="portrait">

        </activity>


        <activity
            android:name=".modules.reflect.ReflectActivity"
            android:label="反射测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.color.ColorAlphaTestActivity"
            android:label="颜色透明度测试"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.threadpool.ThreadPoolActivity"
            android:label="线程池测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.idcard.IdcardTestActivity"
            android:label="身份证号码测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.format.NumFormatTestActivity"
            android:label="数字格式化测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.selector.SelectorTestActivity"
            android:label="背景选择器测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.setting.SettingTestActivity"
            android:label="设置测试类"
