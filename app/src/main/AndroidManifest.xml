        </activity>

        <activity
            android:name=".modules.str.StrTestActivity"
            android:label="字符测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.info.InfoTestActivity"
            android:label="信息展示测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.bluetooth.BluetoothTestActivity"
            android:label="蓝牙测试类"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".modules.statusbar.StatusBarTestActivity"
            android:label="状态栏透明颜色测试类"
