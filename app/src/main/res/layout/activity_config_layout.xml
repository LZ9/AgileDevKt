<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lodz.android.pandora.widget.base.TitleBarLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backDrawable="@drawable/pandora_selector_btn_menu"
        app:backText="@string/config_back_text"
        app:backTextColor="@color/white"
        app:backTextSize="16sp"
        app:divideLineColor="@color/color_ea6662"
        app:divideLineHeight="10dp"
        app:elevationVale="4dp"
        app:expandViewId="@layout/view_config_layout_expand"
        app:isNeedBackBtn="true"
        app:isNeedElevation="true"
        app:isNeedExpandView="true"
        app:isShowDivideLine="true"
        app:titleBarBackground="@color/color_ea413c"
        app:titleTextColor="@color/white"
        app:titleTextSize="18sp">

    </com.lodz.android.pandora.widget.base.TitleBarLayout>

    <com.lodz.android.pandora.widget.custom.MmsTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ea8380"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="2dp"
        app:tabMargin="20dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TextAppearance.TabText"
        app:tabTextColor="@color/color_d9d9d9">

    </com.lodz.android.pandora.widget.custom.MmsTabLayout>

    <com.lodz.android.pandora.widget.base.LoadingLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:contentBackground="@color/color_b3e5fc"
        app:contentOrientation="horizontal"
        app:indeterminateDrawable="@drawable/anims_custom_progress"
        app:isIndeterminate="true"
        app:isNeedTips="true"
        app:pbHeight="50dp"
        app:pbWidth="50dp"
        app:tips="@string/config_loading_tips"
        app:tipsColor="@color/color_1a1a1a"
        app:tipsSize="18sp">

    </com.lodz.android.pandora.widget.base.LoadingLayout>

    <com.lodz.android.pandora.widget.base.NoDataLayout
        android:id="@+id/no_data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:contentBackground="@color/color_deb887"
        app:contentOrientation="vertical"
        app:isNeedImg="true"
        app:isNeedTips="true"
        app:src="@drawable/pandora_ic_take_photo_cancel"
        app:tips="@string/config_no_data_tips"
        app:tipsColor="@color/color_1361d7"
        app:tipsSize="22sp">

    </com.lodz.android.pandora.widget.base.NoDataLayout>

    <com.lodz.android.pandora.widget.base.ErrorLayout
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:contentBackground="@color/color_00796b"
        app:contentOrientation="vertical"
        app:isNeedImg="true"
        app:isNeedTips="true"
        app:src="@drawable/ic_update"
        app:tips="@string/config_fail_tips"
        app:tipsColor="@color/white"
        app:tipsSize="14sp">

    </com.lodz.android.pandora.widget.base.ErrorLayout>

</LinearLayout>