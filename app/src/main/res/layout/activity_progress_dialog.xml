<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no_tips_btn"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_no_tips"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tips_btn"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_tips"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/custom_icon_btn"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_custom_icon"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/canceled_on_touch_outside_btn"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_canceled_on_touch_outside"
        android:textColor="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelable_btn"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pd_cancelable"
        android:textColor="@color/white" />

</LinearLayout>