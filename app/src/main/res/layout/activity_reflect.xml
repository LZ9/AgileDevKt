<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/type_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:checked="false"
            android:switchPadding="5dp"
            android:text="@string/reflect_use_type" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_class_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_get_class"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_constructor_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_get_constructor_name"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_method_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_get_method_name"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_field_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_get_field_name"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_field_value_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_get_field_value"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/execute_function_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_execute_function"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/execute_param_function_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_execute_param_function"
            android:textSize="12sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/set_value_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflect_set_value"
            android:textSize="12sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.core.widget.NestedScrollView>
</LinearLayout>