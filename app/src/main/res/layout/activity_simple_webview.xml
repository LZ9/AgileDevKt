<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lodz.android.agiledevkt.modules.webview.SimpleWebView
        android:id="@+id/simple_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.lodz.android.agiledevkt.modules.webview.SimpleWebView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_00a0e9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backward_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/app_img_name"
            android:scaleType="center"
            android:src="@drawable/selector_btn_left_arrow" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_00a0e9" />

        <ImageView
            android:id="@+id/forward_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/app_img_name"
            android:scaleType="center"
            android:src="@drawable/selector_btn_right_arrow" />

    </LinearLayout>
</LinearLayout>