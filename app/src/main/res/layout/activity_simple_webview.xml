<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lodz.android.agiledevkt.modules.webview.simple.SimpleWebView
        android:id="@+id/simple_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.lodz.android.agiledevkt.modules.webview.simple.SimpleWebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_00a0e9"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backward_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/bg_ffffff_circle"
            android:contentDescription="@string/app_img_name"
            android:scaleType="center"
            android:src="@drawable/selector_btn_left_arrow" />

        <ImageView
            android:id="@+id/forward_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:background="@drawable/bg_ffffff_circle"
            android:contentDescription="@string/app_img_name"
            android:scaleType="center"
            android:src="@drawable/selector_btn_right_arrow" />

    </LinearLayout>
</LinearLayout>